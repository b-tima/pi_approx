{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build debug",
            "command": "make",
            "args": [
				"-j$(nproc)",
				"debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}